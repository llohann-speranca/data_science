import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

data = pd.read_csv("country_data.csv")

print( data.head())

life_expectancy = data['Life Expectancy']

life_expectancy_quartiles = np.quantile(life_expectancy , [.25, .5, .75])

print(life_expectancy_quartiles)

# plt.hist(life_expectancy, histtype="step",normed=True)


median_gdp = np.median(data["GDP"])

low_gdp = data[data["GDP"]<=median_gdp]
high_gdp = data[data["GDP"]>=median_gdp]

plt.hist(low_gdp["Life Expectancy"], alpha=.5,normed=True)

plt.hist(high_gdp["Life Expectancy"], alpha=.5, normed=True)



low_expectancy_quartiles = np.quantile(low_gdp["Life Expectancy"] , [.25, .5, .75])

high_expectancy_quartiles = np.quantile(high_gdp["Life Expectancy"] , [.25, .5, .75])


plt.vlines(low_expectancy_quartiles,0,0.11,linewidth=0.4,color="orange")
plt.vlines(high_expectancy_quartiles,0,0.11,linewidth=0.4,color="blue")


plt.legend(["Low GDP","High GDP"])

print(np.corrcoef([data["GDP"],data["Life Expectancy"]]))
plt.show()
